<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abstract037_uhd"
    android:orientation="vertical"
    android:scaleType="centerCrop"
    android:src="@drawable/bkndchat"
    tools:context="com.chat.app.Activity.MensajeriaActivity">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="12dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="48sp"
            android:layout_height="48sp" />

        <TextView
            android:id="@+id/txtNombreUsuario"
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:textColor="#F8F4F4"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMensajes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnEnviarFoto"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:background="@drawable/galeria"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/txtMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="56"
            android:hint="Escribe un mensaje"
            android:background="#D2FCFAFA"
            android:textColor="#D20E0000"
            android:textColorHint="#4D4747" />

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/send2"
            android:textColorHint="#FAF7F7"
            android:textColor="#941C1C"/>
    </LinearLayout>
</LinearLayout>
